# vim:ft=sh :

# Export machine info
if [[ $(uname) = "Darwin" ]]; then
	LOGICAL_CPU=$(sysctl -n hw.logicalcpu_max)
	PHYSICAL_CPU=$(sysctl -n hw.physicalcpu_max)
fi

if [[ $(uname) = "Linux" ]]; then
	LOGICAL_CPU=$(lscpu -p | egrep -v '^#' | wc -l)
	PHYSICAL_CPU=$(lscpu -p | egrep -v '^#' | sort -u -t, -k 2,4 | wc -l)
fi

export CLICOLOR=true
