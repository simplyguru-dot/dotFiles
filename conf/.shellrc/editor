# vim:ft=sh :

# Install EDITOR
if ! command -v nvim >/dev/null; then
	if command -v brew >/dev/null; then
		brew install python3 ruby lua ctags gotags fzf bat rg clipper neovim swiftlint swiftformat yamllint shfmt
		gem update `gem list | cut -d ' ' -f 1`
		gem install sqlint
		luarocks install luacheck
		pip3 install --upgrade pip
		pip3 install -q ansible-lint
		pip3 install -q neovim-remote
		pip3 install -q neovim
		pip3 install -q vim-vint
		pip3 install -q gitlint
		nvim +PlugInstall +qall
		nvim +UpdateRemotePlugins +qall
	fi
fi

# Setup EDITOR
if [[ -f $HOMEBREW/bin/nvim ]]; then
	export EDITOR="$HOMEBREW/bin/nvim"
else
	if [[ -f /Applications/MacVim.app/Contents/MacOS/Vim ]]; then
		export EDITOR="/Applications/MacVim.app/Contents/MacOS/Vim"
		export VIMRUNTIME="/Applications/MacVim.app/Contents/Resources/vim/runtime"
	else
		if [[ -f /usr/bin/vim ]]; then
			export EDITOR="/usr/bin/vim"
		fi
	fi
fi

# VIM/NVIM session file
export VIM_SESSION_FILENAME=".session.vim"

# ENV Variables
export GIT_EDITOR=$EDITOR
export VISUAL=$EDITOR
export EDITOR=$EDITOR

# Aliases
alias v=$EDITOR
alias vi=$EDITOR
alias vim=$EDITOR

# Open files with Vim
alias -s {yml,yaml,cfg,go}=vim
